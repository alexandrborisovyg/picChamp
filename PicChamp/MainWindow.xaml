<Window x:Class="PicChamp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PicChamp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.5*"/>
            <ColumnDefinition Width="0.5*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="13*"/>
        </Grid.RowDefinitions>

        <Label x:Name="label_count_currenRound" Grid.Row="0" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Top" Content="Some Text"/>
        <Label x:Name="label_count_nextRound" Grid.Row="0" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Top" Content="Some Text"/>

        <Image x:Name="image_1_competator" HorizontalAlignment="Center" VerticalAlignment="Top" Height="auto" Width="auto" Grid.Row="1" Grid.Column="0" MouseDown="image_1_competator_MouseDown"/>
        <Image x:Name="image_2_competator" HorizontalAlignment="Center" VerticalAlignment="Top" Height="auto" Width="auto" Grid.Row="1" Grid.Column="1" MouseDown="image_2_competator_MouseDown"/>

    </Grid>
</Window>
